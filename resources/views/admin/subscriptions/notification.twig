<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">
        {{ trans('anomaly.module.notifications::message.choose_notification') }}
    </h4>
</div>

<div class="modal-body">
    {% if not notifications.isEmpty() %}
        <ul class="nav nav-pills nav-stacked">
            {% for notification in notifications %}
                <li class="nav-item">
                    <a href="{{ url_to('admin/notifications/subscriptions/channel?notification=' ~ notification.namespace) }}"
                       class="nav-link ajax">
                        <strong>{{ trans(notification.object.title) }}</strong>
                        <br>
                        <small>{{ trans(notification.object.description) }}</small>
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        {{ trans('streams::message.no_results') }}
    {% endif %}
</div>
